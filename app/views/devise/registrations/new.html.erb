<div class="bg-white dark:bg-gray-900">
  <div class="flex justify-center h-screen">
      <div class="hidden bg-cover lg:block lg:w-2/3" style="background-image: url(https://images.unsplash.com/photo-1535957998253-26ae1ef29506?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1936&q=80)">
          <div class="flex items-center h-full px-20 bg-gray-900 bg-opacity-40">
              <div>
                  <h2 class="text-4xl font-bold text-white">Brand</h2>

                  <p class="max-w-xl mt-3 text-gray-300">Lorem ipsum dolor sit, amet consectetur adipisicing elit. In autem ipsa, nulla laboriosam dolores, repellendus perferendis libero suscipit nam temporibus molestiae</p>
              </div>
          </div>
      </div>

      <div class="flex items-center w-full max-w-md px-6 mx-auto lg:w-2/6">
  <div class="flex-1">
    <div class="text-center">
      <h2 class="text-4xl font-bold text-center text-gray-700 dark:text-white">Brand</h2>
      <p class="mt-3 text-gray-500 dark:text-gray-300">Sign up for new adventures</p>
    </div>

    <div class="mt-8">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full' }) do |f| %>
        <div>
          <label for="email" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Email Address</label>
          <%= f.input :email, required: true, autofocus: true, input_html: { id: 'email', class: 'block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40', placeholder: 'example@example.com' }, label: false %>
        </div>

        <div class="mt-6">
          <div class="flex justify-between mb-2">
            <label for="password" class="text-sm text-gray-600 dark:text-gray-200">Password</label>
          </div>

          <%= f.input :password, required: true, input_html: { id: 'password', class: 'block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40', placeholder: 'Your Password', type: 'password' }, label: false %>
        </div>

        <div class="mt-6">
          <%= f.button :submit, 'Sign up', class: 'w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50' %>
        </div>
      <% end %>

      <p class="mt-6 text-sm text-center text-gray-400">Already have an account? <%= link_to 'Sign in', new_user_session_path, class: 'text-blue-500 focus:outline-none focus:underline hover:underline' %>.</p>
    </div>
  </div>
</div>

  </div>
</div>
